<%= render "shared/header"%>
<div class="main-index">
  <div class="contents-row">
    <div class="container">
      <%= form_with(model: @task, local: true) do |form| %>
      <div class="title-area">
        <%= form.text_field :title, placeholder: "タスク名" %>
      </div>
      <div class="desc-area">
        <%= form.text_area :description, placeholder: "タスク内容" %>
      </div>
      <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">Start date</label>
      </div>

      <div class='input-wrap'>
        <%= form.datetime_select :start_time, :use_month_numbers => true %>
      </div>

      <div class='form-text-wrap'>
        <label class="form-text">End date</label>
      </div>

      <div class='input-wrap'>
        <%= form.datetime_select :end_time, :use_month_numbers => true %>
      </div>

      <div class="items-detail">
        <div class="weight-bold-text"></div>
        <div class="form">
          <div class="weight-bold-text">
            カテゴリー
          </div>
          <%= form.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"task-category"}) %>
          <div class="weight-bold-text">
            優先度
          </div>
          <%= form.collection_select(:priority_id, Priority.all, :id, :name, {}, {class:"select-box", id:"task-priority"}) %>
        </div>
      </div>

        <%= form.submit "更新" %>
      <% end %>
    </div>
  </div>
</div>