<%= render "shared/header"%>

<div class="main-index">

  <input id="t" type="radio" name="tab_item" checked>
  <label class="tab_item" for="t">タスク一覧</label>
  <input id="c" type="radio" name="tab_item" checked>
  <label class="tab_item" for="c">カレンダー</label>
  
  <div class="tab_content" id="calendars">
    <%= month_calendar events: @tasks do |date, tasks| %>
    <%= date.day %>
      <% tasks.each do |task| %>
        <div>
          <%= link_to task.title, task_path(task.id) %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="tab_content" id="tasks">
  <div class="main-task">
    <nav class="navbar navbar-light bg-light">
      <%= form_with(url: search_tasks_path, local: true, method: :get, class: "form-inline") do |form| %>
        <%= form.text_field :keyword, placeholder: "タイトルで検索する", class: "form-control mr-sm-2" %>
        <%= form.submit "検索", class: "search-btn" %>
      <% end %>
    </nav>
    <div class="card__wrapper">
    <% @tasks.each do |task| %>
      <div class="card">
        <div class="card__body">
          <h2 class="card__title"><%= task.title %></h2>
          <p class="card__summary"><%= task.description %></p>
          <p class="card__summary">開始日 <%= task.start_time.strftime("%Y-%m-%d %H:%M") %></p>
          <p class="card__summary">終了日 <%= task.end_time.strftime("%Y-%m-%d %H:%M") %></p>
          <p class="card__summary"><%= task.priority.name %></p>
          <p class="card__summary"><%= task.category.name %></p>
          <div class="card_btn">
            <%= link_to "詳細", task_path(task.id) %>
            <%= link_to "編集", edit_task_path(task.id) %>
            <%= link_to "削除", task_path(task.id), method: :delete %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
  </div>
</div>

