<%= render "shared/header"%>

<div class="main-index">
  
  <div class="main-task">
    <nav class="navbar navbar-light bg-light">
      <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    </nav>
    <div class="card__wrapper">
    <% @tasks.each do |task| %>
      <div class="card">
        <div class="card__body">
          <h2 class="card__title"><%= task.title %></h2>
          <p class="card__summary"><%= task.description %></p>
          <p class="card__summary">開始日 <%= task.start_time %></p>
          <p class="card__summary">終了日 <%= task.end_time %></p>
          <p class="card__summary"><%= task.priority.name %></p>
          <p class="card__summary"><%= task.category.name %></p>
          <div class="card_btn">
            <%= link_to "詳細", "#" %>
            <%= link_to "編集", "#" %>
            <%= link_to "削除", task_path(task.id), method: :delete %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>